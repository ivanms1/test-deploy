{
  "name": "conun-drive",
  "productName": "Conun Drive",
  "version": "0.1.2-beta",
  "description": "Conun Drive App",
  "main": "dist/index.js",
  "scripts": {
    "start": "parcel src/index.html --out-dir parcel-dist --port 1235",
    "build": "parcel build src/index.html --out-dir dist/parcel-build --public-url ./",
    "dev": "concurrently -k \"yarn start\" \"yarn:electron\"",
    "copy-assets": "copyfiles -f \"electron/assets/**/*\" \"dist/assets\"",
    "electron": "wait-on tcp:1235 && tsc && yarn copy-assets && electron .",
    "make": "yarn build && tsc && yarn copy-assets && electron-builder",
    "release": "yarn build && electron-builder --publish=always",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [
    "conun",
    "file sharing",
    "p2p",
    "drive"
  ],
  "repository": "https://github.com/CONUN-Global/conun-drive",
  "author": {
    "name": "Ivan Saldano",
    "email": "ivanms1@conun.co.kr"
  },
  "license": "MIT",
  "copyright": "Copyright 2020 by CONUN GROUP",
  "build": {
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "./out"
    },
    "appId": "conun.drive.app",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "certificateFile": "private/conun.io.certificate.pfx",
      "certificatePassword": "",
      "verifyUpdateCodeSignature": "false",
      "publisherName": "conun.io.certificate"
    },
    "linux": {
      "category": "Utility",
      "target": "deb"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@types/classnames": "^2.2.11",
    "@types/file-saver": "^2.0.2",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-select": "^4.0.15",
    "@types/websocket": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "autoprefixer": "9.8.6",
    "concurrently": "^6.0.0",
    "copyfiles": "^2.4.1",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-react": "^7.22.0",
    "parcel-bundler": "1.12.3",
    "postcss-modules": "3.2.2",
    "sass": "^1.32.8",
    "typescript": "^4.2.3",
    "wait-on": "^5.2.1"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "@svgr/parcel-plugin-svgr": "^5.5.0",
    "@types/react-router-dom": "^5.1.7",
    "classnames": "^2.3.1",
    "electron-fetch": "^1.7.3",
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0",
    "electron-updater": "^4.3.8",
    "file-saver": "^2.0.5",
    "framer-motion": "^4.1.8",
    "ipfs-core": "^0.5.4",
    "it-all": "^1.0.5",
    "jimp": "^0.16.1",
    "libp2p": "^0.30.12",
    "peer-id": "^0.14.8",
    "pouchdb": "^7.2.2",
    "react": "^17.0.1",
    "react-avatar-editor": "^11.1.0",
    "react-dom": ">=16.0.0",
    "react-dropzone": "^11.3.2",
    "react-hook-form": "^7.2.1",
    "react-indiana-drag-scroll": "^2.0.1",
    "react-modal": "^3.13.1",
    "react-outside-click-handler": "^1.3.0",
    "react-popper": "^2.2.5",
    "react-query": "^3.13.6",
    "react-router-dom": "^5.2.0",
    "react-select": "^4.3.0",
    "react-toastify": "^7.0.4",
    "react-tooltip": "^4.2.17",
    "react-waypoint": "^9.0.3",
    "uint8arrays": "^2.1.4",
    "websocket": "^1.0.34"
  }
}
